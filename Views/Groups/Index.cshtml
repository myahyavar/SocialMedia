@model IEnumerable<SocialMedia.Models.Group>


@{
    ViewData["Title"] = "Groups";
}

<h1>Groups</h1>
<hr />
<p>
    <a asp-action="Create">Create New</a>
    <a asp-controller="GroupHistories" asp-action="Index">See History</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsrCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsrCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h5>Total combined group capacity:</h5>
<div>
    @Model.Sum(i=>i.UsrCount)
</div>
<hr />
<div>
    <a class="btn btn-primary" type="submit" asp-area="" asp-controller="Users" asp-action="AIndex">See Users</a>
</div>